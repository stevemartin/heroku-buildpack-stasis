#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Compiling Stasis site"

# Install Stasis into hidden directory in app roote

cat << EOF > ~/.gemrc
gemhome: $1/.gems
gempath:
- $1/.gems
EOF

/usr/local/bin/gem install stasis haml coffee-script nokogiri rocco maruku RedCloth radius builder erubis sass rdiscount bluecloth kramdown markaby creole wikicloth yajl-ruby --no-rdoc --no-ri | indent

# Run Statis
echo "Running Stasis" | indent
export GEM_HOME=$1/.gems
export PATH=$1/.gems/bin:$PATH
cd $1
$1/.gems/bin/stasis -o *.haml | indent
